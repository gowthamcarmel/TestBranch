<style>
body {
	font-family: Gill Sans MT, sans-serif;
	font-size: 10pt;
}
table {
	width: 100%;
}
table#chargeTbl {
	width:100%; 
	font-weight: bold; 
	border-width: medium; 
	border-style: solid;
}
table#chargeTbl thead {
	font-weight: bold; 
	border-width: medium; 
	border-bottom: solid; 
	border-top: none; 
	border-left: none; 
	border-right: none;
	background-color:#CCCCCC;
}
table#chargeTbl td {
	font-weight: normal;
	align: left;
	padding-right: 2mm;
	border-width: medium; 
	border-bottom: none; 
	border-top: none; 
	border-left: solid; 
	border-right: none;
}
table#chargeTbl td:first-child {
	font-weight: normal;
	align: left;
	padding-left: 2mm;
	border-width: medium; 
	border-bottom: none; 
	border-top: none; 
	border-left: none; 
	border-right: none;	
}
table#chargeTbl tfoot {
	font-weight: normal; 
	border-width: medium; 
	border-bottom: none; 
	border-top: solid; 
	border-left: solid; 
	border-right: none;
}
table#chargeTbl tfoot td:first-child {
	font-weight: bold;
	align: right;
	padding-right: 2mm;
	border-width: medium; 
	border-bottom: none; 
	border-top: none; 
	border-left: none; 
	border-right: none;	
}
table#chargeTbl td.noBar {
	border-width: medium; 
	border-bottom: none; 
	border-top: none; 
	border-left: none; 
	border-right: none;	
}
table#chargeTbl td.noLeftBar {
	border-left: none; 
}
table#chargeTbl td.topBar {
	border-width: medium; 
	border-top: solid; 
}
table#chargeTbl td.topNoLeftBar {
	border-left: none; 
	border-width: medium; 
	border-top: solid; 
}
.subtotaltext {
	font-weight: bold; 
	padding-right: 8mm;
}
table#chargeTbl td.money {
	align: right;
	border-left: none;
}
table#chargeTbl td.moneyTopBar {
	align: right;
	border-top: solid; 
	border-left: none;
}
.subtotalvalue {
	font-weight: bold;
}
.subtitle {
	padding-left: 0mm;
	font-weight: bold;
}
.divider {
	border-width: medium;
	border-bottom: none;
	border-top: solid;
	border-left: none;
	border-right: none;
}

<macrolist>
	<macro id="myheader">

		<!-- Logo -->
		<p style="position:absolute; left:110mm; top:0mm;"><img width="190px" height="50px" align="left" src="@@MISYS_LOGO_HERE@@" /></p>

		<!-- Misys address -->
		<p style="position:absolute; left:85mm; top:2cm; width:8cm; align:right; padding:0mm">@@MISYS_ADDRESS_HERE@@</p>

		<!-- Misys info -->
		<p style="position:absolute; left:85mm; top:60mm; width:8cm; align:right; padding:0mm">@@MISYS_REG_NUM_HERE@@</p>

		<!-- Transaction header -->
		<p style="position:absolute; left:0cm; top:0mm; font-weight:bold; font-size:12pt;">@@TITLE_HERE@@</p>

		<!-- Client address -->
		<p style="position:absolute; left:0cm; top:2cm; padding-left:0mm; width:8.5cm">@@CLIENT_ADDRESS_HERE@@</p>

		<!-- invoice details -->
		<p style="position:absolute; left:0cm; top:60mm; padding-left:0mm; width:8.5cm">@@CLIENT_INFO_HERE@@</p>
		
			<!-- Portugal Invoice Certification no. details -->
		<p style="position:absolute; left:0cm; top:90mm; padding-left:0mm; width:10cm">@@PT_CERTIFICATION_NO_HERE@@</p>
		
		
	</macro>

	<macro id="noheader">
	</macro>

	<macro id="myfooter">
		<table>
			<tr><td width="85%">
				<p style="font-size:8pt; font-weight:bold;">
					&nbsp;<br/>
				</p>
			</td>
			<td width="35%" align="right">
				<p style="text-align:right; font-size:8pt; font-weight:bold;">Page <pagenumber/> of <totalpages/></p>
			</td></tr>
		</table>
	</macro>
</macrolist>

